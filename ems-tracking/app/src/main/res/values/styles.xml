<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- burke -->

    <style name="dFont">
        <item name="android:typeface">sans</item>
    </style>

    <style name="title" parent="dFont">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dFont</item>
    </style>

    <style name="search" parent="dFont">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dFont</item>
    </style>

    <style name="path" parent="dFont">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="btnLayout">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="widgetFont">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/background_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:paddingLeft">5dp</item>
    </style>


</resources>
